<h1>New task</h1>

<form class="new-task" action="/tasks/create" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <label for="title">Title:</label>
  <input type="text" id="title" name="task[title]">
  <label for="details">Details:</label>
  <textarea id="details" name="task[details]"></textarea>
  <input type="submit" value="Create Task" id="submit">
</form>