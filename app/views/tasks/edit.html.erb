<h1>Edit task</h1>

<form class="new-task" action="/tasks/update" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag "id", @task.id %>
  <label for="title">Title:</label>
  <input type="text" id="title" name="task[title]" value="<%= @task.title %>">
  <label for="details">Details:</label>
  <textarea id="details" name="task[details]"><%= @task.details %></textarea>
  <input type="checkbox" id="<%= @task.id %>" name="completed" <%= @task.completed ? "checked" : "" %>>
    <label for="<%= @task.id %>">
      <%= @task.completed ? "This task is completed" : "This task is not yet completed" %>
</label>
  <input type="submit" value="update Task" id="submit">
</form>

